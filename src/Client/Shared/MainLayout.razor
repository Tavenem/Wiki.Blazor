@inherits LayoutComponentBase

<FrameworkLayout Class="wiki-layout">
    <FrameworkContent>
        @if (WikiBlazorClientOptions.AppBar is not null)
        {
            @AppBarRender
        }
        else
        {
            <AppBar Side="VerticalSide.Top" ControlsDrawerSide="Side.Left" Class="d-print-none">
                <LightDarkToggle Class="ms-auto" />
            </AppBar>
        }
        <WikiLeftDrawer />
    </FrameworkContent>
    <ChildContent>
        @Body
    </ChildContent>
</FrameworkLayout>
