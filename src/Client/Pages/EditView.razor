<div class="d-flex flex-wrap m-3 gap-3">
    <button class="btn primary" disabled="@SubmitDisabled" @onclick="ReviseAsync">Publish</button>
    <button class="btn secondary" disabled="@string.IsNullOrWhiteSpace(Content)" @onclick="PreviewAsync">Preview</button>
    <a class="btn" href="@(Article is null ? WikiState.Link() : WikiState.LinkHere())">Cancel</a>
    @if (Article is not null)
    {
        <button class="btn danger" @onclick="DeleteAsync">Delete</button>
    }
</div>
@if (Article?.Transclusions is not null && Article.Transclusions.Count > 0)
{
    <Collapse Title="Pages transcluded in the current version of this one:">
        <ul class="wiki-edit-transclusionlist">
            @foreach (var transclusion in Article.Transclusions)
            {
                <li><a class="wiki-link wiki-link-exists" href="@WikiState.Link(transclusion.Title, transclusion.WikiNamespace)">@Article.GetFullTitle(WikiOptions, transclusion.Title, transclusion.WikiNamespace)</a></li>
            }
        </ul>
    </Collapse>
}